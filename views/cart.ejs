<%- include("partials/header.ejs") %>

<style>
    body{
        text-align: center;
    }
  .header-container {
    margin-top: 2%;
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
    gap: 100px;
    flex-wrap: wrap;
    background-color: white;
  }
  .nav-container {
    
    display: flex;
    gap: 70px;
    color: #484848;
    font: 400 16px Poppins, sans-serif;
    margin: auto 0;
    background-color: white;
  }
  .nav-links {
    display: flex;
    gap: 70px;
    flex-grow: 1;
    list-style: none;
  }
  .lks{
    text-decoration: none;
    color: #484848;
  }
  .cart-items{
    display: grid;
  }
  .row1{
    display: flex;
    justify-content: space-around;

  }




 .proceed {
text-align: end;
width: 300px;
margin: 0 auto;
}

label {
display: block;
margin-bottom: 10px;
}

input[type="checkbox"] {
margin-right: 5px;
}

p {
margin-bottom: 20px;
}

.Checkout {
display: inline-block;
padding: 10px 20px;
background-color:hsl(211, 87%, 58%) ;
color: white;
border: none;
border-radius:   
 4px;
cursor: pointer;
}

button:hover {
background-color:   
 #45a049;
}

 

  @media (max-width: 991px) {
    .header-container {
      gap: 40px;
    }
    .nav-container {
      max-width: 100%;
    }
  }
</style>


<header class="header-container">
  <nav class="nav-container">
    <ul class="nav-links">
      <li><a class="lks" href="">Bag</a></li>
      <li><a class="lks" href="">Address</a></li>
      <li><a class="lks" href="">Payment</a></li>
    </ul>
  </nav>
</header>


<h1>Shopping Cart</h1>
<div class="cart-items">
    <div class="row1">
        <h3>Product</h2>
        <h3>Price</h2>
        <h3>Quantity</h2>
        <h3>Total</h2>
    </div>
    <hr/>
</div>
<hr />

<!-- products -->
<hr />

<form class="proceed">
    <label>
    <input type="checkbox">
    For $10.00 Please Wrap The Product
    </label>
    <p>Subtotal: $100.00</p>
    <button class="Checkout" type="submit">Checkout</button>
    </form>







<h1>Your Cart</h1>

<ul>
  <% if (cartItems.length === 0) { %>
    <li>Your cart is empty.</li>
  <% } else { %>
    <% cartItems.forEach(item => { %>
      <li>
        <%= item.productName %> - Quantity: <%= item.quantity %> - Price: ₹<%= item.price %>
      </li>
    <% }); %>
  <% } %>
</ul>



<%- include("partials/footer.ejs") %>
